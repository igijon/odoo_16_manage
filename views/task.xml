<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record model="ir.ui.view" id="manage.task_list">
            <field name="name">manage task list</field>
            <field name="model">manage.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="manage.task_form">
            <field name="name">manage task form</field>
            <field name="model">manage.task</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="project"/>
                        <field name="definition_date"/>
                        <field name="history"/>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="is_paused"/>
                        <field name="sprint"/>
                        <field 
                            name="developers" 
                            domain="[('is_dev','=',True)]" 
                            context="{'form_view_ref':'manage.devs_partner_form', 'default_is_dev':True}"
                            widget="many2many_tags"></field>
                        <field name="technologies"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="manage.action_task_window">
            <field name="name">manage task window</field>
            <field name="res_model">manage.task</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Tasks" id="manage.menu_1_task_list" parent="manage.menu_1" action="manage.action_task_window"/>

    </data>


</odoo>
